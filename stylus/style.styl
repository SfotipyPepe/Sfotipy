@import "nib"
@import "normalize.styl"
@import "fonts.styl"

//animationMixins(parameter)
//	-webkit-animation parameter
//	-moz-animation parameter
//	-o-animation parameter
//	-ms-animation parameter
//	animation parameter
vendor-prefixes = webkit o ms moz official
dark_gray = #333333
light_gray = #818181
magenta = #CC2F6F
light_gray_plus = #F0F0F0
a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em
	color dark_gray
.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color light_gray
.actions
	position absolute
	bottom 0
	left 0
	right 0
	//background rgba(0, 0, 0, .3)
	background rgba(black, .3)
.border-bottom
	border-bottom 1px solid light_gray
.name
	color dark_gray
.author
	color light_gray
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.menu
	display none
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min
		
		left 0
	.max
		right 0
	.total
		width 75%
		height 5px
		background light_gray
		border-radius 5%
		margin 0 auto
	.state
		width 30%
		height 5px
		background magenta
		border-radius 5%
		position relative
		animation 10s state infinite linear
	.circle
		background dark_gray
		height 10px
		width 10px
		border-radius 50%
		position absolute
		right 0
		top -2px
		animation 1s circle infinite 

@keyframes state
	from 
		width 0
	to
		width 100%
@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.playing
	&.small
		width 20em
		margin 0 auto
.input
	border 1px solid light_gray
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search-icon
	position absolute
	left .5em
	top .8em
	color light_gray
.close-icon
	position absolute
	top .5em
	color light_gray
	right .5em
	font-size 1.2em
.playlist
	width 22em
	padding 0 2em
	border-left 1px solid light_gray
	display none
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size .8em

.isotype
	width 122px
.logo
	padding 1.3em 0
	overflow hidden
	background white
	display none
.avatar
	width 38px
	height 38px
.username
	color light_gray
	position relative
	top 9px
	margin-left .5em
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 10px solid light_gray
		content ""
		display inline-block
		margin-left .4em

//responsive design		
@media screen and (min-width:480px)

	.song&:nth-child(even)
		margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
@media screen and (min-width:1000px)
	body
		background light_gray_plus
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.menu
		display block
		background light_gray_plus
		overflow hidden
		border-top 1px solid light_gray
		.item
			float left
			list-style none
			a
				color dark_gray
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid light_gray
	.music
		width 32.5em
		float left
		.description
			display none

	.header
		height auto
		border none
		.title
			display none
	.logo
	.playlist
		display block