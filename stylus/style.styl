@import "normalize.styl"
@import "fonts.styl"


dark_gray = #333333
light_gray = #818181
magenta = #CC2F6F

body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
img
	vertical-align top
.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em
	color dark_gray
.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color light_gray
.actions
	position absolute
	bottom 0
	left 0
	right 0
	//background rgba(0, 0, 0, .3)
	background rgba(black, .3)
.border-bottom
	border-bottom 1px solid light_gray
.name
	color dark_gray
.author
	color light_gray
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.menu
	display none
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min
		
		left 0
	.max
		right 0
	.total
		width 75%
		height 5px
		background light_gray
		border-radius 5%
		margin 0 auto
	.state
		width 30%
		height 5px
		background magenta
		border-radius 5%
		position relative
	.circle
		background dark_gray
		height 10px
		width 10px
		border-radius 50%
		position absolute
		right 0
		top -2px
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.playing
	&.small
		width 20em
		